<header>
  <div class="banner" style='background: #dddddd center center
      url({{book.image}})'></div>
</header>

<div class="container" style="margin-top:5vh">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <form class='newBook' method='Post' action="/books/{{book._id}}/edit?_method=PUT">

        <p class="mb-1">
          <span class="text-secondary">
            名稱：
          </span>
          <input type="text" name="name" placeholder="{{book.name}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            類別：
          </span>
          <input type="text" name="category" placeholder="{{book.category}}">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            地址：
          </span>
          <input type="text" name="location" placeholder="{{book.location}}" style="width: 50vh;">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            電話：
          </span>
          <input type="text" name="phone" placeholder="{{book.phone}}" style="width: 50vh;">
        </p>

        <p class="mb-1">
          <span class="text-secondary">
            介紹：
            <input type="text" name="description" placeholder="{{book.description}}" style="width: 50vh;height:20vh">
          </span>
        </p>
        <p class="mb-3 ">
          <span class="text-secondary">
            照片：
            <input type="text" name="image" placeholder="{{book.image}}" style="width: 50vh;">
          </span>
        </p>
        <button class="btn btn-outline-success edit-btn" type="submit">SAVE</button>

        <a class="btn btn-outline-secondary edit-btn" href="/books/{{book._id}}">BACK</a>
      </form>
      <img class=" rounded mx-auto d-block mb-4 w-100" src={{book.image}} alt={{book.name}}
        style="max-width: 600px; clear:both">
    </div>
  </div>
</div>